<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/radio_button_celsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="celsius"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="18sp"
                android:checked="true"/>

            <RadioButton android:id="@+id/radio_button_fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fahrenheit"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="18sp"/>

            <RadioButton android:id="@+id/radio_button_kelvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kelvin"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="18sp"/>
        </RadioGroup>

        <Button
            android:id="@+id/button_converter_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:textSize="14sp"
            android:text="Converter temperatura" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview_value_converted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp" />

</LinearLayout>